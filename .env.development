# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Development Database
DB_CONNECTION_STRING=mongodb://localhost:27017/homewoven_dev

# Development JWT Secrets (use proper RSA keys in production)
ACCESS_TOKEN_SECRET_HW=dev-access-secret-key
REFRESH_TOKEN_SECRET_HW=dev-refresh-secret-key

# Development Token Lifetimes (longer for easier testing)
ACCESS_TOKEN_LIFE=3600
REFRESH_TOKEN_LIFE=86400

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Development Security (lower rounds for faster testing)
BCRYPT_ROUNDS=10

# Development CORS (more permissive)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Development Rate Limiting (more permissive)
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=200