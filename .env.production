# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Production Database - REPLACE WITH YOUR PRODUCTION CONNECTION STRING
DB_CONNECTION_STRING=mongodb://your-production-host:27017/homewoven_prod

# Production JWT Secrets - REPLACE WITH YOUR RSA PRIVATE KEYS
ACCESS_TOKEN_SECRET_HW=-----BEGIN RSA PRIVATE KEY-----\nYOUR_ACTUAL_RSA_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----
REFRESH_TOKEN_SECRET_HW=-----BEGIN RSA PRIVATE KEY-----\nYOUR_ACTUAL_RSA_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----

# Production Token Lifetimes (shorter for security)
ACCESS_TOKEN_LIFE=900
REFRESH_TOKEN_LIFE=604800

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Production Security (higher rounds)
BCRYPT_ROUNDS=12

# Production CORS (restrict to your domains)
ALLOWED_ORIGINS=https://vassmol√∂sa.se,https://vassmolosa.nu

# Production Rate Limiting (more restrictive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100