# Application Configuration Template
# Copy this file to .env, .env.development, .env.test, or .env.production
# and fill in the appropriate values

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
# MongoDB connection string - required
DB_CONNECTION_STRING=mongodb://localhost:27017/homewoven

# JWT Configuration - required
# Use RSA private keys for production
ACCESS_TOKEN_SECRET_HW=your-rsa-private-key-here
REFRESH_TOKEN_SECRET_HW=your-rsa-private-key-here

# Token Lifetimes (in seconds)
ACCESS_TOKEN_LIFE=900
REFRESH_TOKEN_LIFE=604800

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100